<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- XLarge text style -->
    <style name="XLargeTextAccentBold">
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/xlarge</item>
    </style>

    <style name="XLargeTextBold">
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/xlarge</item>
    </style>

    <style name="XLargeTextRegular">
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/xlarge</item>
    </style>

    <!-- Large text style -->
    <style name="LargeTextAccentBold">
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="LargeTextBold">
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="LargeTextBoldLight">
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
        <item name="android:textColor">@color/colorCardBackGround</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

    <!-- Normal text style -->
    <style name="NormalTextBold">
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/normal</item>
    </style>

    <!-- Normal text style -->
    <style name="NormalTextFaded">
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
        <item name="android:textColor">@color/colorTextFaded</item>
        <item name="android:textSize">@dimen/normal</item>
    </style>

    <style name="NormalTextAccentBold">
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/normal</item>
    </style>

</resources>
