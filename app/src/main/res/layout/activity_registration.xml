<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="project.test.mobile.registration.RegistrationActivity">

        <android.support.v7.widget.CardView
            android:id="@+id/cvProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_2x"
            app:background="@color/colorCardBackGround"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_2x"
                android:layout_marginBottom="@dimen/margin_bottom_2x">

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_launcher_round" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivProfile"
                    android:layout_marginRight="@dimen/margin_right_2x"
                    android:layout_marginLeft="@dimen/margin_left_2x"
                    android:layout_marginTop="@dimen/margin_top_2x">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/tietFullName"
                        style="@style/LargeTextBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:hint="Full name" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btnStart"
                    style="@style/LargeTextBoldLight"
                    android:layout_below="@+id/tilFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_2x"
                    android:layout_marginRight="@dimen/margin_right_2x"
                    android:layout_marginLeft="@dimen/margin_left_2x"
                    android:textAllCaps="false"
                    android:text="Start"
                    android:textAlignment="center"
                    android:background="@drawable/bg_action_button"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</ScrollView>
